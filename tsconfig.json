{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "ESNext",                   
    "rootDir": "./src",                   
    "outDir": "./dist",                  
    "esModuleInterop": true,              
    "moduleResolution": "node",           
    "skipLibCheck": true,                 
    "strict": true,                       
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
